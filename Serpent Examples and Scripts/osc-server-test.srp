# osc-server-test -- receive messages over OSC
# rbd
#
# this is a companion to osc-send-test.srp

def osc_handler(path, rest parameters)
    display "osc_handler", path, parameters, osc_server_recv_port(), osc_server_sender_ip()

def startup()
    display "osctest", osc_server_init("7770", t)
    display "osctest", osc_server_method("/afloat", "f", nil, 'osc_handler')


def run()
    startup()
    while true
        osc_server_poll()
        time_sleep(0.1)

